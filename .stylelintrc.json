{
	"extends": [
		"stylelint-config-standard"
	],
	"plugins": [
	    "stylelint-order"
	],
	"rules": {
		"indentation": ["tab"],
		"font-family-no-missing-generic-family-keyword": null,
		"color-hex-case": "upper",
		"selector-class-pattern": "^.*$",
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{
				"ignoreShorthands": [
					"/grid/"
				]
			}
		]
	}
}